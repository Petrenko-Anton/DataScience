\newtcblisting{pythoncode}{
    listing engine=minted,
    listing only,
    sharp corners,
    breakable,
    size=fbox,
    boxrule=1pt,
    pad at break*=1mm,
    colback=gray!5,
    colframe=gray!50,
    enhanced,
    minted language=python,
    minted options={
        autogobble,
        fontsize=\scriptsize,
        breaklines,
        style=emacs
    }
}


