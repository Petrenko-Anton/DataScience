\newtcolorbox{defbox}[1]{
	breakable,
	enhanced,
	colback=white,
	boxrule=0pt,
	arc=0pt,
	outer arc=0pt,
	title=#1,
	fonttitle=\bfseries\sffamily\strut,
	coltitle=black,
	colbacktitle=white,
	title style={defblue},
	fontlower=\small,
	overlay={
			\draw[line width=1.5pt,defblue] (frame.south west) -- (frame.south east);
		}
}

